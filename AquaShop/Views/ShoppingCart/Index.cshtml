@model ShoppingCartViewModel

<h2 class="text-justify">Your shoping cart</h2>
<h4>Here are the products from your shoping cart</h4>
<div class="row checkoutForm">

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Product</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.ShopingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">@line.Amount</td>
                    <td class="text-left">@line.Product.Name</td>
                    <td class="text-right">@line.Product.Price.ToString("c")</td>
                    <td class="text-right">(@line.Product.Price * @line.Amount)</td>
                    <td class="text-center">
                        <a class="text-danger remove"
                           asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-id="@line.Product.ProductId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">@Model.ShopingCartTotal.ToString("c")</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group" style="margin-left:10px">
            <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Check out</a>
            <div class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">Add more products<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="Product" asp-action="List" asp-route-category="Aquarium">Aquarium</a></li>
                    <li><a asp-controller="Product" asp-action="List" asp-route-category="Fish">Fish</a></li>
                    <li><a asp-controller="Product" asp-action="List" asp-route-category="Plant">Plant</a></li>
                    <li><a asp-controller="Product" asp-action="List" asp-route-category="Equipment">Equipment</a></li>
                    <li><a asp-controller="Product" asp-action="List" asp-route-category="Reef">Reef</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
